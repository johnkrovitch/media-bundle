<div class="modal-header">
    <h5 class="modal-title">{{ 'media.gallery_modal.title' | trans }}</h5>
    <button type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form action="{{ path('media.gallery_modal') }}"
      method="post"
      class="form">
    <div class="modal-body">
        {{ form_errors(form) }}
        <div class="form-text text-muted">{{ 'media.gallery_modal.help' | trans }}</div>
        {{ form_row(form) }}

        <div class="media-gallery-container"
             data-url="{{ path('media.gallery.content') }}">{# Content will be loaded dynamically #}</div>
    </div>
    <div class="modal-footer">
        <a href="#"
           class="btn btn-light"
           data-dismiss="modal">
            {{ 'media.gallery_modal.cancel' | trans }}
        </a>
        <input type="submit"
               class="btn btn-primary"
               value="{{ 'media.gallery_modal.submit' | trans }}"/>
    </div>
</form>

