<div class="modal-content"
     data-controller="media-select">
    <div class="modal-header">
        <h4 class="modal-title">{{ 'jk_media.media.choose'|trans }}</h4>
        <button type="button"
                class="btn close"
                data-dismiss="modal"
                aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <form action="{{ path('media.add_image_modal') }}"
          method="post"
          enctype="multipart/form-data">
        <div class="modal-body">
            <div class="row">
                <div class="col-lg-12">
                    {{ form_errors(form) }}

                    <div class="form-group"
                         data-controller="media-select">
                        {% for child in form.selectType.children %}
                            <div class="form-check">
                                {{ form_row(child) }}
                            </div>
                        {% endfor %}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.upload) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.gallery) }}
                    </div>
                    {{ 'media.gallery.loading_in_progress' | trans }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_rest(form) }}

            <button type="button"
                    class="btn btn-default"
                    data-dismiss="modal">{{ 'media.gallery_modal.cancel' | trans }}</button>
            <input type="submit"
                   id="add-image-btn"
                   value="{{ 'media.image.add' | trans }}"
                   class="btn btn-primary"/>
        </div>
    </form>
</div>
