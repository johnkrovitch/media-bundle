<div class="modal-header">
    <h4 class="modal-title">{{ 'jk_media.media.add'|trans }}</h4>
    <button type="button"
            class="btn close"
            data-dismiss="modal"
            aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

{{ form_start(form, {
    action: path('media.add_image_modal')
}) }}

<div class="modal-body">
    <div class="row">
        <div class="col-12">
            {{ form_errors(form) }}
            <span class="upload-message d-none"></span>

            <div class="form-group">
                {% for child in form.selectType.children %}
                    <div class="form-check">
                        {{ form_row(child) }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="row media-datasource-container">
        <div class="col-12">
            <div class="form-group">
                {{ form_row(form.upload) }}
            </div>

            <div class="form-group">
                {{ form_row(form.gallery) }}
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    {{ form_rest(form) }}

    <button type="button"
            class="btn btn-default"
            data-dismiss="modal">{{ 'jk_media.gallery_modal.cancel' | trans }}</button>
    <input type="submit"
           value="{{ 'jk_media.image.add' | trans }}"
           class="btn btn-primary"/>
</div>

{{ form_end(form) }}
